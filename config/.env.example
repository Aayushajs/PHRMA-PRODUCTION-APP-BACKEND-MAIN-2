PORT=5002
MONGO_URI=your_mongodb_connection_string

USER_SECRET_KEY=your_secret_key

# Redis Configuration
REDIS_URL=your_redis_connection_string

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Internal Service Communication
# URL of Service 1 (for accessing shared services like notifications)
# In production, use the actual Service 1 URL (e.g., https://service1.yourdomain.com)
SERVICE_1_URL=http://localhost:5000

# Internal Service API Key (must match Service 1's INTERNAL_SERVICE_API_KEY)
# Generate a strong, unique key for production
INTERNAL_SERVICE_API_KEY=your-super-secret-internal-api-key-change-in-production

# Notification Queue Configuration
# Set to 'false' to disable queue (notifications will fail immediately if Service 1 is down)
# Set to 'true' to enable automatic retry queue (recommended for production)
ENABLE_NOTIFICATION_QUEUE=true
