{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": false,
        "outDir": "./dist",
        "rootDir": "./",
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
